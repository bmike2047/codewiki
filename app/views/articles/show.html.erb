<% if !notice.blank? %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>

<h2>Article content</h2>


<div style="background-color: #EFEFEF;padding: 20px">
  <div class="form-group ">
    <label for="article_title" class="font-weight-bold">Title</label>
    <input class="form-control-plaintext " readonly="readonly" value="<%= @article.title %>" name="article[title]" id="article_title" type="text">
  </div>

  <div class="form-group">
    <label for="article_language" class="font-weight-bold">Language</label>
    <input class="form-control-plaintext" readonly="readonly" value="<%= @article.language %>" name="article[language]" id="article_language" type="text">
  </div>

  <div class="form-group">
    <label for="article_body" class="font-weight-bold">Body</label>
    <div>
      <%= raw @article.body %>
    </div>
  </div>

  <% if user_signed_in? %>
    <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-success' %>
  <% end %>

  <%= link_to 'Back', articles_path, class: 'btn btn-success' %>
</div>